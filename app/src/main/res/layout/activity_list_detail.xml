<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Section Header -->
        <TextView
            android:text="Bill Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4A0072"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Decorative Divider -->
        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:background="#7B1FA2"
            android:layout_marginBottom="20dp" />

        <!-- Detail Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_container_bg"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="6dp"
            android:layout_margin="12dp">

            <!-- Month -->
            <TextView
                android:id="@+id/txtMonthDetail"
                android:text="• Month: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Units Used -->
            <TextView
                android:id="@+id/txtUnitsDetail"
                android:text="• Units Used: "
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Rebate -->
            <TextView
                android:id="@+id/txtRebateDetail"
                android:text="• Rebate: "
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Total Charges -->
            <TextView
                android:id="@+id/txtTotalChargesDetail"
                android:text="• Total Charges: "
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Final Cost -->
            <TextView
                android:id="@+id/txtFinalCostDetail"
                android:text="• Final Cost After Rebate: "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#388E3C"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
