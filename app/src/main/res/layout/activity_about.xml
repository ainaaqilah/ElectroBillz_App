<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal"
android:padding="16dp">

<!-- Header -->
<TextView
    android:id="@+id/headerTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="About Me"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:layout_marginBottom="20dp" />

<!-- Profile Image -->
<ImageView
    android:id="@+id/imageProfile"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:src="@drawable/aboutme"
    android:scaleType="centerCrop"
    android:layout_marginBottom="20dp"
    android:elevation="8dp"
    android:padding="6dp"
    android:contentDescription="Profile photo" />

<!-- Info Card -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_white_card"
    android:elevation="6dp"
    android:layout_marginBottom="24dp">

    <!-- Student Info -->
    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name: Ainaa Aqilah Binti Hassan Nuddin\n\nStudent ID: 2023149131\n\nCourse Code: ICT602\n\nCourse Name: Mobile Technology and Development"
        android:textSize="17sp"
        android:textColor="#4B0082"
        android:lineSpacingExtra="6dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- GitHub Link -->
    <TextView
        android:id="@+id/textViewGithub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitHub: https://github.com/sarahali-electricbills"
        android:autoLink="web"
        android:textSize="16sp"
        android:textColor="#7B1FA2"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />
</LinearLayout>

<!-- Footer -->
<TextView
    android:id="@+id/textViewCopyright"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Â© 2025 ElectroBillz by Ainaa Aqilah. All rights reserved."
    android:textSize="14sp"
    android:textColor="#CCCCCC"
    android:gravity="center"
    android:layout_marginTop="16dp" />
</LinearLayout>
    </ScrollView>
